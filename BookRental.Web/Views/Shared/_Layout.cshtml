@using Microsoft.Extensions.Localization
@inject IStringLocalizer Localizer
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["BookRental"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css">
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body class="bg-gray-50">
<nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex">
                <div class="flex-shrink-0 flex items-center">
                    <a asp-action="Index" asp-controller="Home" class="text-xl font-bold text-gray-900 hover:text-gray-700">
                        @Localizer["BookRental"]
                    </a>
                </div>

                <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
                    <a asp-action="Index" asp-controller="Book"
                       class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        @Localizer["Books"]
                    </a>
                    <a asp-action="Index" asp-controller="Customer"
                       class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        @Localizer["Customers"]
                    </a>
                    <a asp-action="Index" asp-controller="Rent"
                       class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        @Localizer["Rentals"]
                    </a>
                    <a asp-action="Index" asp-controller="Genre"
                       class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        @Localizer["Genres"]
                    </a>
                    <a asp-action="Index" asp-controller="Destination"
                       class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                        @Localizer["Destinations"]
                    </a>
                </div>
            </div>

            <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
                <div class="relative">
                    <button class="px-3 py-1.5 text-sm text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 dropdown-toggle"
                            type="button" data-bs-toggle="dropdown">
                        @{
                        var currentCulture = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
                        var flagClass = currentCulture switch
                        {
                        "en" => "EN",
                        "ro" => "RO",
                        "ru" => "RU",
                        _ => "EN"
                        };
                        }
                        @flagClass
                    </button>
                    <ul class="dropdown-menu bg-white rounded-md shadow-lg border border-gray-200 py-1 mt-1">
                        <li><a class="dropdown-item px-3 py-2 text-sm text-gray-700 hover:bg-gray-50" href="#" onclick="changeCulture('en')">English</a></li>
                        <li><a class="dropdown-item px-3 py-2 text-sm text-gray-700 hover:bg-gray-50" href="#" onclick="changeCulture('ro')">Română</a></li>
                        <li><a class="dropdown-item px-3 py-2 text-sm text-gray-700 hover:bg-gray-50" href="#" onclick="changeCulture('ru')">Русский</a></li>
                    </ul>
                </div>

                <div class="relative">
                    <button class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dropdown-toggle"
                            type="button" data-bs-toggle="dropdown">
                        <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                <span class="text-sm font-medium text-gray-700">
                                    @{
                                    var userEmail = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "U";
                                    var initials = userEmail.Substring(0, 1).ToUpper();
                                    }
                                    @initials
                                </span>
                        </div>
                        <span class="ml-2 text-sm font-medium text-gray-700">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</span>
                        <svg class="ml-2 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <div class="dropdown-menu dropdown-menu-end bg-white rounded-md shadow-lg border border-gray-200 py-1 mt-2 min-w-48">
                        <div class="px-4 py-2 border-b border-gray-100">
                            <p class="text-sm text-gray-500">@Localizer["SignedInAs"]</p>
                            <p class="text-sm font-medium text-gray-900">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                        </div>
                        <a class="dropdown-item px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 flex items-center" asp-action="Profile" asp-controller="Account">
                            <svg class="mr-3 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            @Localizer["Profile"]
                        </a>
                        <div class="border-t border-gray-100"></div>
                        <form asp-action="Logout" asp-controller="Auth" method="post" class="m-0">
                            <button type="submit" class="dropdown-item w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 flex items-center">
                                <svg class="mr-3 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013 3v1"></path>
                                </svg>
                                @Localizer["Logout"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="sm:hidden flex items-center">
                <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100"
                        data-bs-toggle="collapse" data-bs-target="#mobile-menu">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div class="collapse sm:hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
            <a asp-action="Index" asp-controller="Book" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">@Localizer["Books"]</a>
            <a asp-action="Index" asp-controller="Customer" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">@Localizer["Customers"]</a>
            <a asp-action="Index" asp-controller="Rent" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">@Localizer["Rentals"]</a>
            <a asp-action="Index" asp-controller="Genre" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">@Localizer["Genres"]</a>
            <a asp-action="Index" asp-controller="Destination" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">@Localizer["Destinations"]</a>


            <div class="border-t border-gray-200 pt-2 mt-2">
                <p class="px-3 py-1 text-xs font-medium text-gray-500 uppercase tracking-wider">@Localizer["Language"]</p>
                <a href="#" onclick="changeCulture('en')" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">English</a>
                <a href="#" onclick="changeCulture('ro')" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">Română</a>
                <a href="#" onclick="changeCulture('ru')" class="block px-3 py-2 text-base font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50">Русский</a>
            </div>
        </div>
    </div>
</nav>

<main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    @RenderBody()
</main>

<div id="toastContainer" class="fixed top-4 right-4 z-50 space-y-2"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>

    window.localizedStrings = {
        requestFailed: '@Html.Raw(Localizer["RequestFailed"])',
        failedToLoadModal: '@Html.Raw(Localizer["FailedToLoadModal"])',
        noFormFound: '@Html.Raw(Localizer["NoFormFound"])',
        errorLoadingForm: '@Html.Raw(Localizer["ErrorLoadingForm"])',
        edit: '@Html.Raw(Localizer["Edit"])',
        addNew: '@Html.Raw(Localizer["AddNew"])',
        close: '@Html.Raw(Localizer["Close"])',
        cancel: '@Html.Raw(Localizer["Cancel"])',
        save: '@Html.Raw(Localizer["Save"])',
        saving: '@Html.Raw(Localizer["Saving"])',
        updatedSuccessfully: '@Html.Raw(Localizer["UpdatedSuccessfully"])',
        createdSuccessfully: '@Html.Raw(Localizer["CreatedSuccessfully"])'
    };
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>