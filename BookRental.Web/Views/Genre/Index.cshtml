@model IEnumerable<GenreViewModel>
@{
    ViewData["Title"] = "Genres";
}

<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-semibold text-gray-900">Genres Management</h1>
            <button id="addGenreBtn" onclick="addGenre()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Add New Genre
            </button>
        </div>
    </div>

    <div class="p-6">
        <table id="genresTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Name</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const genresTable = initializeDataTable('#genresTable', {
            ajax: {
                url: '@Url.Action("GetGenresData", "Genre")',
                type: 'GET'
            },
            columns: [
                { data: 'name' }
            ]
        });

        window.genresTable = genresTable;
    });

    function addGenre() {
        openModal('@Url.Action("GetModalBody", "Genre")', {
            onSuccess: () => window.genresTable.ajax.reload(null, false)
        });
    }
</script>