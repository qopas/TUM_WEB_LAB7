@model IEnumerable<GenreViewModel>
@{
ViewData["Title"] = "Genres";
}

<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-semibold text-gray-900">Genres Management</h1>
            <button id="addGenreBtn" onclick="addGenre()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Add New Genre
            </button>
        </div>
    </div>

    <div class="p-6">
        @await Html.PartialAsync("_GenresTable")
    </div>
</div>

<script>
    function addGenre() {
        openModal('@Url.Action("GetModalBody", "Genre")', null, {
            onSuccess: () => window.genresTable.ajax.reload(null, false)
        });
    }
</script>